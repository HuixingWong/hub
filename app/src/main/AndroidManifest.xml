<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.hx.hub">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="com.hx.hub.base.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning"
        tools:replace="android:icon">
        <activity android:name="com.hx.hub.ui.detail.repo.RepoDetailActivity"></activity>
        <activity android:name="com.hx.hub.ui.web.CommonWebViewActivity" />
        <activity
            android:name="com.hx.hub.ui.login.LoginActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.hx.hub.ui.MainActivity"
            android:launchMode="singleTop" />
        <activity android:name="com.hx.hub.ui.search.SearchActivity" />
    </application>

</manifest>