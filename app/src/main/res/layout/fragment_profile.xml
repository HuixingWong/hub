<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/clProfile"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/colorPrimary"
	android:paddingTop="20dp"
	android:paddingHorizontal="16dp"
	>

	<ImageView
		android:id="@+id/mBtnEdit"
		android:layout_width="40dp"
		android:layout_height="40dp"
		android:layout_marginTop="6dp"
		android:layout_marginEnd="6dp"
		android:padding="10dp"
		android:src="@drawable/ic_edit_pencil"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<ImageView
		android:id="@+id/mIvAvatar"
		android:layout_width="90dp"
		android:layout_height="90dp"
		android:layout_marginTop="16dp"
		app:layout_constraintVertical_bias="0.3"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		tools:src="@mipmap/ic_github" />

	<TextView
		android:id="@+id/mTvNickname"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:ellipsize="end"
		android:maxLines="1"
		android:textColor="@color/white"
		android:textSize="16sp"
		android:textStyle="bold"
		app:layout_constraintTop_toTopOf="@id/mIvAvatar"
		app:layout_constraintStart_toEndOf="@+id/mIvAvatar"
		android:layout_marginStart="20dp"
		tools:text="hx" />
	<TextView
		android:id="@+id/desc_tv"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:layout_constraintTop_toBottomOf="@+id/mTvNickname"
		app:layout_constraintEnd_toStartOf="@id/mTvNickname"
		android:layout_marginTop="10dp"
		/>
	<TextView
		android:id="@+id/join_time"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:layout_constraintTop_toBottomOf="@+id/desc_tv"
		app:layout_constraintStart_toStartOf="@+id/desc_tv"
		android:layout_marginTop="10dp"
		/>

</androidx.constraintlayout.widget.ConstraintLayout>